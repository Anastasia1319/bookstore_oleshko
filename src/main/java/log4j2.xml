<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="DEBUG">
    <Properties>
        <property name="LOG_DIR">logs</property>
        <property name="ARCHIVE_LOG_DIR">${LOG_DIR}/archive</property>
        <property name = "pattern_console">%d{HH:mm:ss} [%t] %-5level %logger{5} - %msg%n</property>
        <property name = "pattern_file">%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{5} - %msg%n</property>
    </Properties>
    <ThresholdFilter level = "trace"/>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern_console}"/>
        </Console>

        <File name="LogToFile" fileName="${LOG_DIR}/text.log" bufferedIO = "true">
            <PatternLayout pattern="${pattern_file}"/>
        </File>
    </Appenders>

    <Loggers>
        <Logger name = "com.belhard.bookstore.data.connection.DataSource" level = "INFO" additivity = "false">
            <Appender-Ref ref = "Console"/>
        </Logger>
        <Logger name = "com.belhard.bookstore.data.dao.impl.BookDaoImpl" level = "DEBUG" additivity = "false">
            <Appender-Ref ref = "Console"/>
            <Appender-Ref ref = "LogToFile"/>
        </Logger>
        <Logger name = "com.belhard.bookstore.data.dao.impl.UserDaoImpl" level = "DEBUG" additivity = "false">
            <Appender-Ref ref = "Console"/>
            <Appender-Ref ref = "LogToFile"/>
        </Logger>

        <Root level = "debug">
            <Appender-Ref ref = "Console" level = "trace"/>
            <Appender-Ref ref = "LogToFile"/>
        </Root>
    </Loggers>
</Configuration>